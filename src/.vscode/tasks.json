{
   "tasks": [
      {
         "type": "cppbuild",
         "label": "C/C++: g++ generate active file",
         "command": "/usr/bin/g++",
         "args": [
            "-g",
            "${file}",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "detail": "Tâche générée par le débogueur."
      }
   ],
   "version": "2.0.0"
}